.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}
.title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}
.tool{
  margin-top: 20rpx;
}
.circle-img{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background-color: #e5e5e5;
  position: relative;
  bottom: 45rpx;
  z-index: -99;
}
.detail{
  color: #666;
  margin: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}